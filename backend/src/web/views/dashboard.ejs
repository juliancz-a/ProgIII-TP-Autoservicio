<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/style.css">
        <title>Dashboard</title>
    </head>
    <body>
        <aside class="sidebar">
            <h2>Admin</h2>
            <nav>
                <ul>
                    <li><a class="active" href="">Dashboard</a></li>
                    <li><a href="">Orders</a></li>
                    <li><a href="">Products</a></li>
                </ul>
            </nav>
        </aside>
        <main class="main-content">
            <h1>Bienvenido, <%= username %></h1>
            <h2>Productos</h2>
            <table class="products-table">
                <thead class="products-head">
                    <tr>
                        <th>ID</th>
                        <th>Título</th>
                        <th>Descripción</th>
                        <th>Categoría</th>
                        <th>Precio</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody class="products-body">
                    <% if (products.length > 0) { %>
                        <% products.forEach(product => { %>
                            <tr>
                                <td><%= product.id %></td>
                                <td><%= product.title %></td>
                                <td><%= product.description %></td>
                                <td><%= product.category %></td>
                                <td>$<%= product.price.toFixed(2) %></td>
                                <td class="<%= product.status ? 'status-active' : 'status-inactive' %>">
                                    <%= product.status ? 'Activo' : 'Inactivo' %>
                                </td>
                                <td class="actions">
                                    <button href="/dashboard/edit/<%= product.id %>">Editar</button>
                                    <% if (product.active) { %>
                                        <button href="/dashboard/disable/<%= product.id %>">Deshabilitar</button>
                                    <% } else { %>
                                        <button href="/dashboard/enable/<%= product.id %>">Habilitar</button>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="7">No hay productos disponibles.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </main>
    </body>
</html>